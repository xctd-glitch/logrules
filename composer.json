{
    "name": "srp/smart-redirect-platform",
    "description": "Smart Redirect Platform API and dashboard.",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "phpstan/phpstan": "^1.11",
        "squizlabs/php_codesniffer": "^3.9",
        "friendsofphp/php-cs-fixer": "^3.57"
    },
    "autoload": {
        "psr-4": {
            "SRP\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --no-progress --level=max",
        "cs": "vendor/bin/phpcs --standard=PSR12 src tests",
        "cs-fix:dry": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "test": "@php vendor/bin/phpunit --configuration phpunit.xml.dist --log-junit junit.xml --fail-on-warning --display-warnings --display-deprecations --do-not-fail-on-empty-test-suite",
        "lint": [
            "@php vendor/bin/phpcs",
            "@php vendor/bin/php-cs-fixer fix --dry-run --diff"
        ],
        "analyse": [
            "@php vendor/bin/phpstan analyse"
        ],
        "quality": [
            "@test",
            "@analyse",
            "@lint"
        ]
    }
}
